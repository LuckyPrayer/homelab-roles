# Prometheus Configuration
# Generated by Ansible - Do not edit manually

global:
  scrape_interval: {{ prometheus_scrape_interval }}
  evaluation_interval: {{ prometheus_evaluation_interval }}
  external_labels:
    environment: '{{ env }}'
    cluster: 'homelab'

# Alertmanager configuration
alerting:
  alertmanagers:
    - static_configs:
        - targets:
          - alertmanager:9093

# Load rules
rule_files:
  - /etc/prometheus/rules/*.yml

# Scrape configurations
scrape_configs:
  # Prometheus self-monitoring
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
        labels:
          host: 'argus-{{ env }}'

  # Local node exporter
  - job_name: 'node-local'
    static_configs:
      - targets: ['node-exporter:9100']
        labels:
          host: 'argus-{{ env }}'

  # Local cAdvisor
  - job_name: 'cadvisor-local'
    static_configs:
      - targets: ['cadvisor:8080']
        labels:
          host: 'argus-{{ env }}'

{% for job in prometheus_scrape_targets | default([]) %}
  # {{ job.job_name }} targets
  - job_name: '{{ job.job_name }}'
    static_configs:
      - targets:
{% for target in job.targets %}
          - '{{ target }}'
{% endfor %}
{% if job.labels is defined %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: instance
{% endif %}

{% endfor %}
