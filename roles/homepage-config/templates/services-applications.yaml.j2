---
# Homepage Services - Applications Dashboard
# Auto-generated by Ansible for {{ inventory_hostname }}

- Productivity:
    - n8n:
        icon: n8n
        href: https://n8n.{{ homepage_env }}.{{ homepage_base_domain }}
        description: Workflow automation platform
        siteMonitor: http://{{ hostvars[inventory_hostname].ansible_host }}:5678
        statusStyle: dot

    - Vaultwarden:
        icon: vaultwarden
        href: https://vaultwarden.{{ homepage_env }}.{{ homepage_base_domain }}
        description: Password manager (Bitwarden)
        siteMonitor: http://{{ hostvars[inventory_hostname].ansible_host }}:8200
        statusStyle: dot

- Home:
    - Mealie:
        icon: mealie
        href: https://mealie.{{ homepage_env }}.{{ homepage_base_domain }}
        description: Recipe manager & meal planner
        siteMonitor: http://{{ hostvars[inventory_hostname].ansible_host }}:9000
        statusStyle: dot

    - Homepage:
        icon: homepage
        href: https://home.{{ homepage_env }}.{{ homepage_base_domain }}
        description: Applications dashboard
        siteMonitor: http://{{ hostvars[inventory_hostname].ansible_host }}:3001
        statusStyle: dot

- Social & Bots:
{% if homepage_env == 'dev' %}
    - Timbot LL:
        icon: discord
        href: https://discord.gg
        description: Discord/Twitch bot (Lucky's Lab)
        statusStyle: dot
{% elif homepage_env == 'prod' %}
    - Timbot TB:
        icon: discord
        href: https://discord.gg
        description: Discord/Twitch bot (The Batcave)
        statusStyle: dot
{% endif %}

- Gaming:
{% if homepage_env == 'dev' %}
    - Minecraft LL:
        icon: minecraft
        href: https://bluemap.{{ homepage_env }}.{{ homepage_base_domain }}
        description: "Minecraft server (Lucky's Lab)"
        siteMonitor: http://{{ hostvars[inventory_hostname].ansible_host }}:8100
        statusStyle: dot

    - Stardew Server:
        icon: mdi-controller
        href: https://stardew.{{ homepage_env }}.{{ homepage_base_domain }}
        description: Stardew Valley multiplayer (VNC)
        siteMonitor: http://{{ hostvars[inventory_hostname].ansible_host }}:8091
        statusStyle: dot
{% elif homepage_env == 'prod' %}
    - Minecraft MH:
        icon: minecraft
        href: https://bluemap.{{ homepage_env }}.{{ homepage_base_domain }}
        description: Minecraft server (Mental Hospital SMP)
        siteMonitor: http://{{ hostvars[inventory_hostname].ansible_host }}:8100
        statusStyle: dot
{% endif %}
