# Infisical configuration for infisical-run wrapper
# Managed by Ansible - DO NOT EDIT

# Environment slug (dev, staging, prod)
INFISICAL_ENV={{ infisical_env_slug | default('dev') }}

# Project ID (required)
{% if infisical_project_id is defined and infisical_project_id %}
INFISICAL_PROJECT_ID={{ infisical_project_id }}
{% endif %}

# Paths to fetch secrets from (space-separated)
# Later paths override secrets from earlier paths with the same name
INFISICAL_PATHS="{{ infisical_secret_paths | default('/') }}"
