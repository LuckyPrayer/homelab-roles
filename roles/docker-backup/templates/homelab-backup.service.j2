[Unit]
Description=Daily backup of Docker containers to Backblaze B2
After=docker.service
Wants=docker.service

[Service]
Type=oneshot
ExecStart={{ backup_scripts_dest }}/backup.sh all full
User=root
Group=root

# Environment
EnvironmentFile=-{{ backup_scripts_dest }}/backup.env

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=homelab-backup

# Security
PrivateTmp=true
NoNewPrivileges=false

[Install]
WantedBy=multi-user.target
