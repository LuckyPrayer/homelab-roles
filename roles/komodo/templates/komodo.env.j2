# ============================================================================
# SECURITY KEYS
# ============================================================================
# Passkey for authentication between Core and Periphery agents
KOMODO_PASSKEY={{ komodo_passkey | default('changeme-please-set-secure-passkey') }}

# Webhook secret for GitHub/GitLab integrations (optional)
KOMODO_WEBHOOK_SECRET={{ komodo_webhook_secret | default('') }}

# ============================================================================
# INITIAL ADMIN USER
# ============================================================================
# These are only used on first startup to create the admin user
KOMODO_INIT_ADMIN_USERNAME={{ komodo_admin_username | default('admin') }}
KOMODO_INIT_ADMIN_PASSWORD={{ komodo_admin_password | default('changeme') }}
