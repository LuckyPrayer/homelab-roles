[Unit]
Description=Audit Homelab Containers Every 15 Minutes
Documentation=https://github.com/LuckyPrayer/homelab-apps

[Timer]
# Run every 15 minutes with a random delay to stagger across hosts
OnCalendar=*:0/15
RandomizedDelaySec=60
Persistent=true

# Start 2 minutes after boot to let containers come up
OnBootSec=120

[Install]
WantedBy=timers.target
