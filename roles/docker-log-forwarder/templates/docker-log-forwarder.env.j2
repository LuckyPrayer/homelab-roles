# Docker Log Forwarder Environment Configuration
# Generated by Ansible - Do not edit manually

# Discord Bot webhook URL
DISCORD_BOT_WEBHOOK_URL={{ discord_bot_webhook_url | default('http://localhost:8085') }}/webhook/logs

# Host identifier for channel routing
DISCORD_BOT_HOST={{ inventory_hostname }}

# Minimum log level to forward: debug, info, warning, error
LOG_LEVEL_FILTER={{ docker_log_forwarder_level | default('info') }}

# Batch settings for efficient log forwarding
BATCH_SIZE={{ docker_log_forwarder_batch_size | default('10') }}
BATCH_TIMEOUT={{ docker_log_forwarder_batch_timeout | default('5') }}
